{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "data": {
    "url": "https://raw.githubusercontent.com/rfordatascience/tidytuesday/master/data/2020/2020-01-21/spotify_songs.csv",
    "format": {
      "type": "csv"
    }
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "duration_ms",
      "type": "quantitative",
      "bin": {"maxbins": 60}
    },
    "y": {
      "aggregate": "count",
      "type": "quantitative",
      "stack": null
    },
    "color":{
      "field":"playlist_genre",
      "type":"nominal"   
    },
    "opacity": {"value": 0.5}
  }
}
