{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/colmr/vis_class/master/FakeAccomodationDetails.csv"
  },
  "title":"Exploring Irish Accommodations",
  "vconcat":[
    {
      "hconcat":[
        {
          "width": 600,
          "height": 750,
          "projection": {
            "type": "conicConformal"
          },
          "layer": [
            {
              "data": {
                "url": 
                  "https://gist.githubusercontent.com/carsonfarmer/9791524/raw/b27ca0d78d46a84664fe7ef709eed4f7621f7a25/irish-counties-segmentized.topojson",
                "format": {
                  "type": "topojson",
                  "feature": "counties"
                }
              },
              "mark": {
                "type": "geoshape",
                "stroke": "white",
                "fill":"#ccc"
              }
            },
            {
              "params":[
                {
                  "name": "leg_select",
                  "select": {"type": "point", "fields": ["Type"]},
                  "bind": "legend"
                }
              ],
              "mark": "circle",
              "encoding": {
                "longitude": {
                  "field": "Longitude",
                  "type": "quantitative"
                },
                "latitude": {
                  "field": "Latitude",
                  "type": "quantitative"
                },
                "color":{
                  "field":"Type",
                  "type":"nominal",
                  "scale":{
                    "range": ["#E69F00", "#009E73", "#CC79A7", "#0072B2", "#56B4E9"]
                  }
                },
                "size": {"value": 32},
                "tooltip": [
                  {"field": "Name", "type": "nominal"},
                  {"field": "Type", "type": "nominal"},
                  {"field": "Telephone", "type": "nominal"}
                ],
                "href": {"field": "Url", "type": "nominal"},
                "opacity": {
                  "condition": {
                    "test":{
                      "and":[
                        {"param": "leg_select"},
                        {"param": "bar_select"},
                        {"param": "tick_select"}
                      ]
                    },
                    "value": 1 
                  },
                  "value": 0
                }
              }
            }
          ]
        },
        {
          "params": [{
            "name": "bar_select",
            "select": {
              "type": "point",
              "encodings": ["y"],
              "fields": ["AddressRegion"]
             }
          }],
          "transform": [
            {"filter": {"param": "tick_select"}},
            {"filter": {"param": "leg_select"}}
          ],
          "mark": "bar",
          "width":200,
          "height":750,
          "encoding": {
            "x": {
              "title":"Total Accommodations",
              "aggregate": "count",
              "type": "quantitative"
            },
            "y": {
              "title":null,
              "field": "AddressRegion",
              "type": "nominal",
              "sort":"-x"
            },
            "color": {
                "field":"Type",
                "type":"nominal"
            },
            "opacity":{
              "condition": {
                "param": "bar_select",
                "value":1
              },
              "value":0.3
            }
          }
        }
      ]
    },
    {
      "params": [{
        "name": "tick_select",
        "select": {
          "type":"interval",
          "encodings": ["x"]
          }
      }],
      "mark": "tick",
      "width":900,
      "height":50,
      "encoding": {
        "x": {
          "field": "Capacity",
          "type": "quantitative"
        },
        "color":{
          "condition":{
            "param":"tick_select",
            "field":"Type",
            "type": "nominal"
          },
          "value": "lightgray"
        },
        "opacity":{
          "condition": {
            "test":{
              "and":[
                {"param": "leg_select"},
                {"param": "bar_select"}
              ]
            },
            "value": 1 
          },
          "value": 0
        }
      }
    }
  ],
  "config": {
    "legend": {
      "orient":"top-left"
    },
    "tick": {
      "thickness": 1
    },
    "title": {
      "fontSize":30,
      "anchor":"middle"
    }
  }
}

