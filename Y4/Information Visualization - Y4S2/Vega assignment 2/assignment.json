{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/colmr/vis_class/master/FakeAccomodationDetails.csv"
  },
  
  "vconcat":[
    {
      "hconcat":[
        {
          "width": 600,
          "height": 900,
          "projection": {
            "type": "conicConformal"
          },
          "layer": [
            {
              "data": {
                "url": 
                  "https://gist.githubusercontent.com/carsonfarmer/9791524/raw/b27ca0d78d46a84664fe7ef709eed4f7621f7a25/irish-counties-segmentized.topojson",
                "format": {
                  "type": "topojson",
                  "feature": "counties"
                }
              },
              "mark": {
                "type": "geoshape",
                "stroke": "white",
                "fill":"#ccc"
              }
            },
            {
              "params":[
                {
                  "name": "leg_select",
                  "select": {"type": "point", "fields": ["Type"]},
                  "bind": "legend"
                }
              ],
              "mark": "circle",
              "encoding": {
                "longitude": {
                  "field": "Longitude",
                  "type": "quantitative"
                },
                "latitude": {
                  "field": "Latitude",
                  "type": "quantitative"
                },
                "color":{"field":"Type", "type":"nominal"},
                "size": {"value": 30},
                "tooltip": [
                  {"field": "Name", "type": "nominal"},
                  {"field": "Type", "type": "nominal"},
                  {"field": "Telephone", "type": "nominal"}
                ],
                "href": {"field": "Url", "type": "nominal"},
                "opacity": {
                  "condition": {
                    "test":{
                      "and":[
                        {"param": "leg_select"},
                        {"param": "bar_select"}
                      ]
                    },
                    "value": 1 
                  },
                  "value": 0.2
                }
              }
            }
          ]
        },
        {
          "params": [{
            "name": "bar_select",
            "select": {
              "type": "point",
              "encodings": ["y"],
              "fields": ["AddressRegion"]
             }
          }],
          "mark": "bar",
          "width":200,
          "height":900,
          "encoding": {
            "x": {
              "aggregate": "count",
              "type": "quantitative"
            },
            "y": {
              "field": "AddressRegion",
              "type": "nominal",
              "sort":"-x"
            },
            "color": {
              "condition": {
                "param": "bar_select",
                "field":"Type",
                "type":"nominal"
              },
              "value": "lightgray"
            }
          }
        }
      ]
    },
    {
      "mark": "tick",
      "width":900,
      "height":50,
      "encoding": {
        "x": {
          "field": "Capacity",
          "type": "quantitative"
        },
        "color":{"field":"Type", "type": "nominal"}
      }
    }
  ],
  "config": {
    "legend": {
      "orient":"top-left"
    },
    "tick": {
      "thickness": 1
    }
  }
}
